<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="569dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageActivite"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/Desc_Image_activity"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/activite" />

        <TextView
            android:id="@+id/libeleactivite"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageActivite"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="@string/libele_activite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/typeactivite"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/libeleactivite"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="@string/type_activites"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dateactivite"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeactivite"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="43dp"
            android:text="@string/date_limite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/libelecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageActivite"
            android:layout_marginStart="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="342dp"
            android:layout_toEndOf="@+id/libeleactivite"
            android:text="@string/LibellÃ©_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/typecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/libeleactivite"
            android:layout_marginStart="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="342dp"
            android:layout_toEndOf="@+id/typeactivite"
            android:text="@string/Type_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/datecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeactivite"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="342dp"
            android:layout_toEndOf="@+id/dateactivite"
            android:text="@string/Date_content"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>