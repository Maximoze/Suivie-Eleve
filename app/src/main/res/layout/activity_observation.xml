<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObservationActivity">


    <TextView
        android:id="@+id/text_ajout_observation"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="76dp"
        android:text="@string/title_observations"
        android:textColor="@color/c3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_observation"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginEnd="4dp"
        android:background="@color/c3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ajout_observation" />

    <RelativeLayout
        android:id="@+id/evenement_formulaire_contenair"
        android:layout_width="325dp"
        android:layout_height="416dp"
        android:layout_below="@+id/divider_observation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/roud_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ajout_observation">

        <TextView
            android:id="@+id/eleve"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="68dp"
            android:text="@string/eleve"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/contenu_eleve"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="63dp"
            android:layout_toEndOf="@+id/eleve"
            android:ems="10"
            android:inputType="textPersonName"
            android:autofillHints="@string/eleve"/>

        <TextView
            android:id="@+id/typeO"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eleve"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="85dp"
            android:text="@string/Type"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/contenu_type"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contenu_note"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="54dp"
            android:layout_toEndOf="@+id/typeO"
            android:ems="10"
            android:inputType="textPersonName"
            android:autofillHints="@string/type"/>

        <TextView
            android:id="@+id/note"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeO"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="84dp"
            android:text="@string/Note"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/contenu_note"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="105dp"
            android:layout_toEndOf="@+id/note"
            android:ems="10"
            android:inputType="textPersonName"
            android:autofillHints="@string/Note"/>


    </RelativeLayout>

    <Button

        android:id="@+id/boutonobservation"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="89dp"
        android:background="@drawable/roud_background"
        android:gravity="center"
        android:text="@string/Obeservation_buttionenvoyer"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evenement_formulaire_contenair" />

</androidx.constraintlayout.widget.ConstraintLayout>


