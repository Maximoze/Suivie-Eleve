<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RappelActivity">

    <TextView
        android:id="@+id/text_faire_lappel"
        android:layout_width="336dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:drawableStart="@drawable/rappel"
        android:gravity="left|center_vertical"
        android:text="@string/title_faire_lappel"
        android:textColor="@color/c3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_rappel"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_below="@+id/text_faire_lappel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:background="@color/c3"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/text_faire_lappel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/text_faire_lappel"
        app:layout_constraintTop_toTopOf="@+id/text_faire_lappel"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>