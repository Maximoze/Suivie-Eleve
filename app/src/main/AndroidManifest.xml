<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.suivi_eleve">
    <!-- Permission for pick an image from gallery -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ObservationsEnseignant.AjoutObservationsActivity"></activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".ProfilParentActivity" />
        <activity android:name=".EvenementActivity" />
        <activity android:name=".ActivitesActivity" />
        <activity android:name=".ObservationActivity" />
        <activity android:name=".Rappel.RappelParent" />
        <activity
            android:name=".ParentAcceuilActivity"
            android:label="@string/title_activity_parent_acceuil" />
        <activity
            android:name=".EnseignantDashbordActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemes">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>